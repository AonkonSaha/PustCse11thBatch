<?xml version="1.0" encoding="utf-8"?>
  <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/pustlogo"
    android:backgroundTintMode="screen"
    android:backgroundTint="#DADACA"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity22">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">



    <ImageView
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:src="@drawable/antupic"
        android:layout_gravity="center"
        android:paddingBottom="25dp"

        />

    <TextView
        android:id="@+id/textroll21"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:text="@string/strb21"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"

        />


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView21"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>



    <TextView
        android:id="@+id/textroll21A"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:text="STTUDY LEAVE"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#C90A0A"
        android:layout_gravity="center"
        android:gravity="center"

        />







  </LinearLayout>








  </ScrollView>